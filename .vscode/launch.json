{
	"configurations": [
		{
			"type": "cppdbg",
			"request": "launch",
			"name": "Debug Millennium (Windows)",
			"program": "C:\\Program Files (x86)\\Steam\\steam.exe",
			"args": ["-dev", "-skipinitialbootstrap", "-nobootstrapperupdate", "-noverifyfiles"],
			"cwd": "C:\\Program Files (x86)\\Steam\\",
			"stopAtEntry": true,
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				},
				{
					"description": "Break on exit",
					"text": "-break-insert exit",
					"ignoreFailures": true
				},
				{
					"description": "Break on _exit",
					"text": "-break-insert _exit",
					"ignoreFailures": true
				},
				{
					"description": "Catch exit syscall",
					"text": "-catch-syscalls exit",
					"ignoreFailures": true
				},
				{
					"description": "Catch exit_group syscall",
					"text": "-catch-syscalls exit_group",
					"ignoreFailures": true
				},
				{
					"description": "Set confirm off",
					"text": "-gdb-set confirm off",
					"ignoreFailures": true
				}
			],
			"environment": [],
			"externalConsole": false,
			"preLaunchTask": "CMake: build"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug Millennium (MacOS)",
			"program": "${workspaceFolder}/build/Millennium",
			"args": ["-dev", "-skipinitialbootstrap", "-nobootstrapperupdate", "-noverifyfiles"],
			"cwd": "${workspaceFolder}",
			"preLaunchTask": "CMake: build",
			"preRunCommands": ["breakpoint name configure --disable cpp_exception"],
			"console": "integratedTerminal"
		},
		{
			"name": "Debug Millennium (Unix)",
			"type": "node",
			"request": "launch",
			"program": "${workspaceFolder}/scripts/posix/start.sh",
			"console": "integratedTerminal",
			"env": {
				"LD_PRELOAD": "${workspaceFolder}/build/libmillennium_x86.so"
			},
			"cwd": "${workspaceFolder}",
			"runtimeExecutable": "/bin/bash",
			"runtimeArgs": ["-c", "${workspaceFolder}/scripts/posix/start.sh -dev"]
		}
	]
}
